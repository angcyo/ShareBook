<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.viewgroup.RLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_selector"
    android:orientation="horizontal"
    app:r_background="@color/base_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.angcyo.uiview.widget.RImageCheckView
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_xhdpi"
            android:src="@drawable/base_check_circle_selector"/>

        <ImageView
            android:id="@+id/trash_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_xhdpi"
            android:padding="@dimen/base_xhdpi"
            android:src="@drawable/base_trash_selector"/>

    </LinearLayout>

    <include layout="@layout/item_book_list_layout"/>
</com.angcyo.uiview.viewgroup.RLinearLayout>
