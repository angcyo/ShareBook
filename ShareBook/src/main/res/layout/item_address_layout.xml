<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/base_xhdpi"
    android:layout_marginStart="@dimen/base_xhdpi"
    android:layout_marginTop="@dimen/base_xhdpi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/base_hdpi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.angcyo.uiview.widget.RTextView
                android:id="@+id/name_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                tools:text="吊炸天"/>

            <com.angcyo.uiview.widget.RTextView
                android:id="@+id/phone_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="185768581238"/>
        </RelativeLayout>

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/address_view"
            style="@style/BaseDarkTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_hdpi"
            tools:text="中国北方俱乐部"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_ldpi"
            android:layout_marginBottom="@dimen/base_hdpi"
            android:layout_marginTop="@dimen/base_hdpi"
            android:background="@drawable/base_dash_shape"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/base_bg_selector"
                android:button="@drawable/base_check_circle_selector"
                android:paddingBottom="@dimen/base_ldpi"
                android:paddingTop="@dimen/base_ldpi"
                android:text="设置默认地址"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/edit_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/base_dark_border_line_selector"
                android:padding="@dimen/base_ldpi"
                android:text="编辑"/>

            <TextView
                android:id="@+id/delete_view"
                style="@style/BaseMainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_hdpi"
                android:background="@drawable/base_dark_border_line_selector"
                android:padding="@dimen/base_ldpi"
                android:text="删除"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

