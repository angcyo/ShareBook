<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/base_xhdpi"
        android:paddingStart="@dimen/base_xhdpi">

        <include
            android:id="@+id/user_name_layout"
            layout="@layout/item_single_input_layout"/>

        <include
            android:id="@+id/user_password_layout"
            layout="@layout/item_single_input_layout"/>

        <include
            android:id="@+id/re_user_password_layout"
            layout="@layout/item_single_input_layout"/>

        <com.angcyo.sharebook.widget.BButton
            android:id="@+id/register_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_xhdpi"
            android:text="注册"/>

    </LinearLayout>

</RelativeLayout>
